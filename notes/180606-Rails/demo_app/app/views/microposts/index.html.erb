<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <!-- <td><%= micropost.user.name %></td> -->
        <!-- <td><%= User.where(id: micropost.user_id).map {|user| user.name}.join("") %></td> -->
        <!-- <td><%= User.find(micropost.user_id).name %></td> -->
        <td><%= User.find_by(id: micropost.user_id).name %></td>

        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

